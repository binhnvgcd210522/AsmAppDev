@model AsmAppDev.Models.ApplicationUser
@{
    ViewData["Title"] = "User Profile";
}

<h1>User Profile</h1>

<div class="row">
    <div class="col-md-3">
        <dt>Avatar</dt>
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <img src="@Model.Avatar" alt="Avatar" class="img-fluid" />
        }
        else
        {
            <p>No avatar available</p>
        }
    </div>
    <div class="col-md-9">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
            <!-- Hiển thị thông tin người dùng -->
            <div class="border p-3 mt-4">
                <div class="mb-3 row">
                    <label asp-for="@Model.Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Name" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="@Model.Introduction" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Introduction" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="@Model.Address" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="@Model.Address" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-3 col-form-label">Avatar</label>
                    <div class="col-sm-9">
                        <input type="file" name="avatarFile" accept="image/*" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-3 col-form-label">CV</label>
                    <div class="col-sm-9">
                        <input type="file" name="cvFile" class="form-control" />
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-controller="Profile" asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>
</div>
