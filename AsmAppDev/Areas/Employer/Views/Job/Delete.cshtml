@model Job
<h1>Delete a job</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input disabled asp-for="Title">
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input disabled asp-for="Description">
        </div>
        <div class="mb-3 row">
            <label asp-for="requiredQualification">Required Qualification</label>
            <input disabled asp-for="requiredQualification">
        </div>
        <div class="mb-3 row">
            <label asp-for="Deadline"></label>
            <input disabled asp-for="Deadline">
        </div>
        <div class="mb-3 row">
            <label asp-for="Category"></label>
            <input disabled asp-for="Category.Name">
        </div>
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Job" asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>
