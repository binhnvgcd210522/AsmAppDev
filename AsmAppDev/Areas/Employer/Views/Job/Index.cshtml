@model List<Job>
<partial name="_Notification" />
<h1>Here is a list of Job</h1>
<a asp-controller="Job" asp-action="Create" class="btn btn-primary">Create Job</a>
<table class="table table-bordered">
	<thead>
		<tr>
			<td>Title</td>
			<td>Description</td>
			<td>Required Qualification</td>
			<td>Deadline</td>
			<td>Category</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		@foreach (var Job in Model)
		{
			<tr>
				<td>@Job.Title</td>
				<td>@Job.Description</td>
				<td>@Job.requiredQualification</td>
				<td>@Job.Deadline</td>
				<td>@Job.Category.Name</td>
				<td>
					<a asp-controller="Job" asp-action="Edit" asp-route-id="@Job.Id" class="btn btn-primary">Edit</a>
					<a asp-controller="Job" asp-action="Delete" asp-route-id="@Job.Id" class="btn btn-danger">Delete</a>
					<a asp-controller="Job" asp-action="ViewJobApp" asp-route-id="@Job.Id" class="btn btn-primary">View Job Application</a>
				</td>
			</tr>
		}
	</tbody>

</table>