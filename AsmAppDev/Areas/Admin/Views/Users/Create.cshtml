@model ApplicationUser

<h2>Create a new Account</h2>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            @* enctype="multipart/form-data" *@
            <hr />
            <div class="form-floating mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="PasswordHash">Password</label>
                <input asp-for="PasswordHash" class="form-control" placeholder="password" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="username" />
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" placeholder="address" />
                <label asp-for="Address">Address</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="City" class="form-control" autocomplete="new-city" aria-required="true" placeholder="city" />
                <label asp-for="City">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}